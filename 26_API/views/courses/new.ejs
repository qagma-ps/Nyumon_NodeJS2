<div class = "data-form">
  <%# create a user form %>
  <form action="/courses/create" method="post">
    <h2>Create a new course:</h2>
    <label for="inputTitle">Title</label>
    <input type="text" name="title" id="inputTitle" placeholder="Title" autofocus required>
    <label for="inputDescription">Description</label>
    <input type="text" name="description" placeholder="Description" required>
    <label for="inputCost">Cost</label>
    <input type="number" name="cost" id="inputCost" placeholder="Cost" required>
    <label for="inputMaxStudents">Max Students</label>
    <input type="number" name="maxStudents" id="inputMaxStudents" placeholder="max num of Students">
    <button type="submit">Create</button>
  </form>
</div>
