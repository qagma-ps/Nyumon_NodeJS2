<form action="<%= `/courses/${course._id}/update?_method=PUT` %>" method="post">
  <h2>Edit course:</h2>
  <label for="inputTitle">Title</label>
  <input type="text" name="title" id="inputTitle" value="<%= course.title %>" placeholder="Title" autofocus required>
  <label for="inputDescription">Description</label>
  <input type="text" name="description" value="<%= course.description %>" placeholder="Description" required>
  <label for="inputCost">Cost</label>
  <input type="number" name="cost" id="inputCost" value="<%= course.cost %>" placeholder="Cost" required>
  <label for="inputMaxStudents">Max Students</label>
  <input type="number" name="maxStudents" id="inputMaxStudents" value="<%= course.maxStudents %>" placeholder="max num of Students">
  <button type="submit">Update</button>
</form>
